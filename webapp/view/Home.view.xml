<mvc:View
    controllerName="com.kayky.project1.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <subHeader>
            <Toolbar id="toolb1">
                <SearchField
                    id="searchField"
                    liveChange="onSearch"
                    width="50%"
                    placeholder="{i18n>searchPlaceholder}"
                />
                <SearchField
                    id="searchFieldoData"
                    search="onSearchoData"
                    width="50%"
                    placeholder="{i18n>searchPlaceholder}"
                />
                <ToolbarSeparator id="tbs1" />
            </Toolbar>
        </subHeader>
        <Table
            id="idProductsTable"
            items="{Assets>/data}"
        >
            <columns>
                <Column
                    id="col1"
                    width="6em"
                    hAlign="Left"
                >
                    <Label
                        text="Rank"
                        id="Rankid"
                    />
                </Column>
                <Column
                    id="col2"
                    width="12em"
                    hAlign="Left"
                >
                    <Label
                        text="Name"
                        id="txt2"
                    />
                </Column>
                <Column
                    id="col3"
                    width="8em"
                    hAlign="Left"
                >
                    <Label
                        text="Price"
                        id="txt3"
                    />
                </Column>
                <Column
                    id="col4"
                    hAlign="Left"
                    width="10em"
                >
                    <Label
                        text="Market Cap"
                        id="txt4"
                    />
                </Column>
                <Column
                    id="col5"
                    hAlign="Left"
                    width="10em"
                >
                    <Label
                        text="VWAP(24Hr)"
                        id="txt5"
                    />
                </Column>
                <Column
                    id="col6"
                    hAlign="Left"
                    width="6em"
                >
                    <Label
                        text="Supply"
                        id="txt6"
                    />
                </Column>
                <Column
                    id="col7"
                    hAlign="Left"
                    width="10em"
                >
                    <Label
                        text="Volume(24Hr)"
                        id="txt7"
                    />
                </Column>
                <Column
                    id="col8"
                    hAlign="Left"
                    width="10em"
                >
                    <Label
                        text="Change(24Hr)"
                        id="txt8"
                    />
                </Column>
            </columns>
            <items>
                <ColumnListItem
                    vAlign="Middle"
                    id="cl1"
                >
                    <cells>
                        <Text
                            text="{Assets>rank}"
                            id="txtsup1"
                        />
                        <Text
                            text="{Assets>name}"
                            id="txtsup2"
                        />
                        <Text
                            text="{
                                path: 'Assets>priceUsd',
                                formatter: '.formatter.formatPrice'
                            }"
                            id="txtsup3"
                        />
                        <Text
                            text="{Assets>marketCapUsd}"
                            id="txtsup4"
                        />
                        <Text
                            text="{Assets>vwap24Hr}"
                            id="txtsup5"
                        />
                        <Text
                            text="{Assets>supply}"
                            id="txtsup6"
                        />
                        <Text
                            text="{Assets>volumeUsd24Hr}"
                            id="txtsup7"
                        />
                        <Text
                            text="{Assets>changePercent24Hr}"
                            id="txtsup8"
                        />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
</mvc:View>
